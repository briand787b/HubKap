<% if flash[:notice] %>
	<div id="notice-bar" class="row">
		<p><%= flash[:notice] %></p>
	</div>
<% end %>
<div id="main-header" class="row">
	<h1 id="central_hub">Central Hub</h1>
</div>
<div class="row">
	<div class="col-md-3">
		<div class="row">	
			<div class="main-window">
				<h3>Ask a Question</h3>
				<div><%= link_to 'Ask', new_question_path, class: "btn" %></div>
			</div>
		</div>
		<div class="row">
			<div class="main-window">
				<h3>Pending Answers</h3>
				<% if @answers.size > 0 %>	
					<table class="table" id="answer-tbl" data-id="<%= @answers[0].user_id %>">
						<thead>
							<tr>
								<td>Questions</td>
							</tr>
						</thead>
						<tbody>
							<% @answers.each do |a| %>
								<tr>
									<td><%= a.question.title %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-9">
		<h2 id="question-table-header">Questions to Answer</h2>
		<table class="table">
			<thead>
				<tr>
					<th>Question</th>
					<th>Subject</th>
					<th>Level</th>
					<th>Option</th>
				</tr>
			</thead>
			<tbody id="question_table">
				<% @questions.each do |q| %>
					<tr>
						<td><%= q.title %></td>
						<td><%= q.topic %></td>
						<td><%= q.difficulty %></td>
						<td><%= link_to 'Show', q %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div id="modal_div">

</div>