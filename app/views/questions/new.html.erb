<div class="row">
	<h1>New Question</h1>
</div>
<div class="row">
	<%= form_for @question do |f| %>
		<div class="col-md-7">
			<div class="row">
				<div class="form-group">
					<%= f.label :title %><br />
					<%= f.text_field :title, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :body %><br />
					<%= f.text_area :body, class: "form-control", rows: "10" %>
				</div>
			</div>
		</div>
		<div class="col-md-3 col-md-offset-1">
			<div class="row">
				<div class="form-group">
					<%= f.label :topic %>
					<%= f.select(:topic, QuestionsHelper::TOPICS, class: "form-control") %>
				</div>
				<div class="row">
					<div class="form-group">
						<%= f.label :difficulty %>
						<%= f.select(:difficulty, QuestionsHelper::DIFFICULTY_LEVEL, class: "form-control") %>
					</div>
				</div>
				<div class="row">
					<%= f.hidden_field :user_id, value: current_user.id %>
					<div class="action">
						<%= f.submit class: "btn btn-default" %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
